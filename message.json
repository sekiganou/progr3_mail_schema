{
  "type": "array",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "",
  "minItems": 0,
  "uniqueItems": true,
  "items": {
    "type": "object",
    "required": [
      "GUID",
      "SenderUserGUID",
      "RecipientsUserGUIDs",
      "IsForwarded",
      "Subject",
      "Body",
      "Date",
      "ReplyToMessageGUID",
      "IsRead"
    ],
    "properties": {
      "GUID": {
        "type": "string",
        "minLength": 1
      },
      "SenderUserGUID": {
        "type": "string",
        "minLength": 1
      },
      "IsForwarded": {
        "type": ["string"],
        "minLength": 1,
        "enum": ["NO", "YES"]
      },
      "RecipientsUserGUIDs": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "minItems": 1
      },
      "Subject": {
        "type": "string",
        "minLength": 1
      },
      "Body": {
        "type": "string",
        "minLength": 1
      },
      "Date": {
        "type": "string",
        "format": "date-time"
      },
      "ReplyToMessageGUID": {
        "type": ["string", "null"],
        "minLength": 1
      },
      "IsRead": {
        "type": ["string"],
        "minLength": 1,
        "enum": ["NO", "YES"]
      }
    }
  }
}
